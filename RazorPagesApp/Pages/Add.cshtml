@page
@model RazorPagesApp.Pages.AddModel
@{
    ViewData["Title"] = "Add Fruit";  
}
<h2>Add Fruit</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="FruitModels.name"></label>
        <input asp-for="FruitModels.name" class="form-control" />
        <span asp-validation-for="FruitModels.name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FruitModels.instock"></label>
        <input type="checkbox" asp-for="FruitModels.instock" class="form-control" />
        <span asp-validation-for="FruitModels.instock" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>